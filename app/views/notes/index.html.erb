<p id="notice"><%= notice %></p>

<div class="row">
  <%= form_for :filters, html: { class: 'input-field col s12' }, method: 'get' do |f| %>
    <%= material_icon.search.css_class('prefix') %>
    <%= f.text_field :title, autofocus: true, placeholder: t('search_placeholder'), value: params.dig(:filters, :title) %>
  <% end %>

  <% @notes.each do |month, setNotes| %>
    <p class="month-section">
      <%= t('date.month_names')[month]%>
    </p>
      <% setNotes.each do |note|%>
      <%= link_to note_path(note) do %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">
                <%= note.title %>
                <span class="right" style="font-size: 50%">
                  <%= format_as_localtime note.created_at %>
                </span>
              </span>
            </div>
          </div>
        </div>
        <% end %>
    <% end %>
  <% end %>
</div>

<div class="fixed-action-btn tooltipped" data-tooltip ="Create new note" data-position="bottom">
  <%= link_to new_note_path, title: t('new_tooltip'), class: 'btn-floating btn-large pulse' do %>
    <%= material_icon.add %>
  <% end %>
</div>
