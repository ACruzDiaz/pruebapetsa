<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content  ">
        <span class="card-title">
          <%= @note.title %>
          <span class="right" style="font-size: 50%">
            <%= format_as_localtime @note.created_at %>
          </span>
        </span>
        <p style="white-space: pre-line"><%= @note.body %></p>
      </div>
      <div class="card-action  ">
        <%= link_to @note, title: t('delete_tooltip'), method: :delete, data: { confirm: t('confirmation_message')}, class: '' do %>
          <%= material_icon.delete %>
        <% end %>

        <%= link_to edit_note_path(@note), title: t('edit_tooltip'), class: ' right' do %>
          <%= material_icon.mode_edit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
