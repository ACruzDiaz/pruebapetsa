<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(note.errors.count, "error") + t('error_message_title')%> </h5>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row" style="margin-top: 7mm">
    <div class="input-field col s12">
      <%= form.text_field :title, autofocus: true, class: ' '%>
      <%= form.label :title, t('title') %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.text_area :body, class: 'materialize-textarea  ' %>
      <%= form.label :body, t('body') %>
    </div>
  </div>

  <div class="row ">
    <div class="col s12 right-align">
      <button class="btn-flat waves-effect waves-light" type="submit" >
        <%= material_icon.send %>
      </button>
    </div>
  </div>
<% end %>
